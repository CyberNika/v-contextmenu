active-color = #499ff8
border-color = #f2f2f2
shadow-color = rgba(150, 150, 150, 0.2)
padding-vertical = 5px

.v-contextmenu
  position: absolute
  padding: padding-vertical 0
  background-color: #fff
  border: 1px solid border-color
  border-radius: 4px
  box-shadow: 2px 2px 8px 0px shadow-color
  font-size: 14px
  white-space: nowrap
  cursor: pointer
  z-index: 2800

  .v-contextmenu-item
    padding: padding-vertical 15px
    line-height: 1
    color: #333

    &.v-contextmenu-item--hover
      background-color: active-color
      color: #fff

  .v-contextmenu-divider
    height: 0
    margin: padding-vertical 0
    border-bottom: 1px solid #f2f2f2

  .v-contextmenu-submenu
    position: relative

    & > .v-contextmenu
      position: absolute

      &.left
        left: 0
        transform: translateX(-100%)

      &.right
        right: 0
        transform: translateX(100%)

      &.top
        top: -(padding-vertical) - 1

      &.bottom
        bottom: -(padding-vertical) - 1

    .v-contextmenu-submenu__title
      margin-right: padding-vertical * 2

    .v-contextmenu-submenu__icon
      position: absolute
      right: padding-vertical

      &::before
        content: "\e622"
